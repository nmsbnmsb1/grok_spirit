{
  "manifest_version": 3,
  "name": "GrokSpirit",
  "version": "1.1.4.2",
  "description": "View and edit Grok Imagen prompt parameters. See what prompts generated your videos and modify them.",
  "permissions": [
    "downloads",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://assets.grok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/*"
      ],
      "js": [
        "utils.js",
        "favorites-manager.js",
        "grok-spirit.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grok Spirit"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}