{
  "manifest_version": 3,
  "name": "Grok Spirit",
  "version": "1.0.9",
  "description": "View and edit Grok Imagen prompt parameters. See what prompts generated your videos and modify them.",
  "permissions": [
    "debugger",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://assets.grok.com/*",
    "https://otokonoizumi.github.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://grok.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grok Spirit"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
